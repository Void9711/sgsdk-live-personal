#!/usr/bin/env groovy
@Library('sgsdk-live-personal') _

NOMAD_REPO='https://github.com/Void9711/sgsdk-live-personal.git'

pipeline {
    agent any
    options {
        skipDefaultCheckout()
        disableConcurrentBuilds()
        buildDiscarder(logRotator(
            daysToKeepStr: '15'
        ))
        ansiColor('xterm')
    }
    parameters {
        choice(name: 'TARGET_ENV',
            choices: getEnvChoices(),
            description: 'The environment to deploy to.')
    }
    stages {
        stage('Deploy') {
            steps {
                levantDeploy job: 'example', env: params.TARGET_ENV, repo: NOMAD_REPO, resource: 'sgsdk-live', subdirectory: './nomad', useNomadRun: true
            }
        }
    }
}
